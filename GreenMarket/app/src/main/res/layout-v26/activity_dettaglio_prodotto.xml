<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ricerca.dettaglio_prodotti.DettaglioProdottoActivity">

  <TextView
      android:id="@+id/nome_prodotto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:textSize="32sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/prezzo_prodotto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:textSize="32sp"
      app:layout_constraintStart_toEndOf="@+id/nome_prodotto"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/foto_prodotto"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nome_prodotto"
      tools:src="" />

  <TextView
      android:id="@+id/descrizione_prodotto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:justificationMode="inter_word"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/foto_prodotto" />

  <Button
      android:id="@+id/buttonAddList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="167dp"
      android:layout_marginEnd="154dp"
      android:layout_marginBottom="56dp"
      android:text="Aggiungi alla lista della spesa"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.547"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/textViewQuantita"
      android:layout_width="40dp"
      android:layout_height="30dp"
      android:layout_marginBottom="12dp"
      android:gravity="center"
      android:text="1"
      android:textAlignment="center"
      android:textSize="24sp"
      app:layout_constraintBottom_toTopOf="@+id/buttonAddList"
      app:layout_constraintEnd_toStartOf="@+id/imageViewAdd"
      app:layout_constraintHorizontal_bias="0.607"
      app:layout_constraintStart_toEndOf="@+id/imageViewRemove" />

  <ImageView
      android:id="@+id/imageViewAdd"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="11dp"
      android:layout_marginEnd="138dp"
      android:layout_marginBottom="13dp"
      app:layout_constraintBottom_toTopOf="@+id/buttonAddList"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/textViewQuantita"
      app:srcCompat="@mipmap/ic_add" />

  <ImageView
      android:id="@+id/imageViewRemove"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginStart="155dp"
      android:layout_marginEnd="6dp"
      android:layout_marginBottom="12dp"
      app:layout_constraintBottom_toTopOf="@+id/buttonAddList"
      app:layout_constraintEnd_toStartOf="@+id/textViewQuantita"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@mipmap/ic_diff" />

</androidx.constraintlayout.widget.ConstraintLayout>