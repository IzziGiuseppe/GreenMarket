<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tess_punti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.tessera_punti.TesseraPuntiActivity">


    <TextView
        android:id="@+id/ti_premia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GreenMarket ti premia!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#FF99CC00"
        app:layout_constraintBottom_toTopOf="@id/hai_speso"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@id/ti_premia" />

    <View
        android:id="@+id/view3"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="#FF99CC00"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view4"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="#FF99CC00"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#FF99CC00"
        app:layout_constraintBottom_toTopOf="@id/codici_sconto"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toBottomOf="@id/riscatta" />

    <TextView
        android:id="@+id/hai_speso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Hai speso:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/converti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <Button
        android:id="@+id/converti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Converti in punti"
        app:layout_constraintBottom_toTopOf="@+id/punti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hai_speso" />

    <TextView
        android:id="@+id/punti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="Punti:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/riscatta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/converti" />

    <Button
        android:id="@+id/riscatta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Riscatta codici sconto"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/punti" />

    <TextView
        android:id="@+id/codici_sconto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Codici sconto"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_codici_sconto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_codici_sconto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codici_sconto" />

    <ImageButton
        android:id="@+id/infoCS"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_codici_sconto"
        app:layout_constraintStart_toEndOf="@+id/codici_sconto"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:srcCompat="@android:drawable/ic_dialog_info"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/valore_spesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="â‚¬50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/converti"
        app:layout_constraintStart_toEndOf="@+id/hai_speso"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/valore_punti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/riscatta"
        app:layout_constraintStart_toEndOf="@+id/punti"
        app:layout_constraintTop_toBottomOf="@+id/converti" />

</androidx.constraintlayout.widget.ConstraintLayout>

