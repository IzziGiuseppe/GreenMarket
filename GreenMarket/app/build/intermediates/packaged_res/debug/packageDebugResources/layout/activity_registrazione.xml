<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registrati"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/nome" />

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:ems="10"
            android:hint="@string/il_tuo_nome"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewCognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/cognome" />

        <EditText
            android:id="@+id/editTextCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:ems="10"
            android:hint="@string/il_tuo_cognome"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewIndirizzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/indirizzo" />

        <EditText
            android:id="@+id/editTextIndirizzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:ems="10"
            android:hint="@string/il_tuo_indirizzo"
            android:inputType="text"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/emailRegister" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:ems="10"
            android:hint="@string/il_tuo_indirizzo_email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/passwordRegister" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/la_tua_password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true" />

            <ImageView
                android:id="@+id/togglePasswordVisibilityReg"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_visibility_off" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/conferma_password" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/angoli_arrotondati_edit_text"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:background="@color/white"
                android:hint="@string/la_tua_password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true" />

            <ImageView
                android:id="@+id/toggleConfPassVisibilityReg"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_visibility_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutRegistrazione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/ho_letto_e_accetto_i_termini_e_le_condizioni" />

            <TextView
                android:id="@+id/textViewTerminiCondizioni"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/termini_e_condizioni"
                android:textColorHighlight="@color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="@string/continua" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/hai_gi_un_account"
                app:layout_constraintBottom_toTopOf="@+id/textViewAccedi"
                app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
                tools:layout_editor_absoluteX="108dp" />

            <TextView
                android:id="@+id/textViewAccedi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accediRegister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAccount"
                tools:layout_editor_absoluteX="241dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>